<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etAddPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        android:hint="@string/person_name_hint" />

    <RadioGroup
        android:id="@+id/radiopayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radiocredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_credit"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radiodebit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_debit"
            />

    </RadioGroup>

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp"
        android:hint="@string/amount"
        android:inputType="number" />

</LinearLayout>